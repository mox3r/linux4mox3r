// -*- mode: jsonc -*-
{
  "layer": "top", // Waybar at top layer
  "position": "top", // Waybar position (top|bottom|left|right)
  "height": 35, // Waybar height (to be removed for auto height)
  // "width": 1440, // Waybar width
  "spacing": 4, // Gaps between modules (4px)
  // Choose the order of the modules
  "modules-center": [
    "power-profiles-daemon",
    "cpu",
    "memory",
    "temperature"
    // "custom/icon"
    // "sway/mode",
    // "sway/scratchpad",
    // "custom/media",
  ],
  "modules-left": ["custom/launcher", "hyprland/workspaces", "hyprland/window"],
  "modules-right": [
    //"mpd",
    // "idle_inhibitor",
    "battery",
    "backlight",
    "pulseaudio",
    //"battery#bat2",
    "hyprland/language",
    // "keyboard-state",
    "clock",
    "network",
    "tray"
  ],

  "custom/launcher": {
    "format": " ÔÖº ",
    "tooltip": false,
    "on-click": "eww open --toggle powermenu"
  },

  "custom/icon": {
    "interval": 600,
    "exec": "curl wttr.in/Minsk?format=1"
  },

  "hyprland/window": {
    "format": "{class}",
    "max_length": 25,
    "rewrite": {
      "Yandex-browser": "Yandex",
      "code-oss": "Code",
      "Alacritty": "Alacritty",
      "org.telegram.desktop": "Telegram"
    },
    "separate-outputs": true,
    "icon": true
  },
  // Modules configuration
  "hyprland/workspaces": {
    "disable-scroll": false,
    "all-outputs": true,
    "warp-on-scroll": false,
    "format": "{icon}",
    "format-icons": {
      "1": "ÔÑ†",
      "2": "Ôâ®",
      "3": "ÔÑ°",
      "4": "ÔÜº",
      "5": "ÔÅµ",
      "urgent": "ÔÅ™",
      "focused": "ÔÜí",
      "default": "ÔÑë"
    }
  },
  "keyboard-state": {
    "numlock": true,
    "capslock": true,
    "format": "{name} {icon}",
    "format-icons": {
      "locked": "ÔÄ£",
      "unlocked": "ÔÇú"
    }
  },
  "sway/mode": {
    "format": "<span style=\"italic\">{}</span>"
  },
  "sway/scratchpad": {
    "format": "{icon} {count}",
    "show-empty": false,
    "format-icons": ["", "Ôãí"],
    "tooltip": true,
    "tooltip-format": "{app}: {title}"
  },
  "mpd": {
    "format": "{stateIcon} {consumeIcon}{randomIcon}{repeatIcon}{singleIcon}{artist} - {album} - {title} ({elapsedTime:%M:%S}/{totalTime:%M:%S}) ‚∏®{songPosition}|{queueLength}‚∏© {volume}% ÔÄÅ",
    "format-disconnected": "Disconnected ÔÄÅ",
    "format-stopped": "{consumeIcon}{randomIcon}{repeatIcon}{singleIcon}Stopped ÔÄÅ",
    "unknown-tag": "N/A",
    "interval": 5,
    "consume-icons": {
      "on": "ÔÉÑ "
    },
    "random-icons": {
      "off": "<span color=\"#f53c3c\">ÔÅ¥</span> ",
      "on": "ÔÅ¥ "
    },
    "repeat-icons": {
      "on": "ÔÄû "
    },
    "single-icons": {
      "on": "ÔÄû1 "
    },
    "state-icons": {
      "paused": "ÔÅå",
      "playing": "ÔÅã"
    },
    "tooltip-format": "MPD (connected)",
    "tooltip-format-disconnected": "MPD (disconnected)"
  },
  // "idle_inhibitor": {
  //     "format": "{icon}",
  //     "format-icons": {
  //         "activated": "ÔÅÆ",
  //         "deactivated": "ÔÅ∞"
  //     }
  // },
  "hyprland/language": {
    "format": "{short}"
  },
  "tray": {
    "icon-size": 20,
    "spacing": 10
  },
  "clock": {
    "interval": 5,
    "format": "{:%H:%M}",
    "timezone": "Europe/Minsk",
    "tooltip-format": "<big>{:%D %B}</big>\n<tt><small>{calendar}</small></tt>",
    "format-alt": "{:%Y-%h-%d}"
  },
  "cpu": {
    "interval": 10,
    "format": "\ue610 {usage}%",
    "tooltip": true,
    "tooltip-format": "avg_frequency",
    "on-click": "alacritty --class htop -e htop"
  },
  "memory": {
    "interval": 10,
    "format": "\ue9c4 {used}GiB",
    "tooltip-format": "Mem: {percentage}%\nSwap: {swapPercentage}%",
    "on-click": "alacritty --class htop -e htop"
  },
  "temperature": {
    // "thermal-zone": 2,
    // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
    "critical-threshold": 80,
    // "format-critical": "{temperatureC}¬∞C {icon}",
    "format": "{icon} {temperatureC}¬∞C",
    "format-icons": ["Ôù´", "Ôãâ", "Ôù©"]
  },
  "backlight": {
    // "device": "acpi_video1",
    "tooltip": false,
    "format": "<span color=\"gold\">{icon}</span> {percent}%",
    "format-icons": ["Óë¥", "Óë≤"]
  },
  "battery": {
    "states": {
      // "good": 95,
      "warning": 30,
      "critical": 15
    },
    "format": "{icon}{capacity}%",
    "format-full": "{icon}{capacity}%",
    "format-charging": "Ó£ê <span color=\"white\">{capacity}%</span>",
    "format-plugged": "Ôá¶ <span color=\"white\">{capacity}%</span>",
    "format-alt": "{icon}{time}",
    "tooltip-format": "Time2empty: {time}\nCharging count: {cycles}",
    // "format-good": "", // An empty format will hide the module
    // "format-full": "",
    "format-icons": [
      "<span color=\"#f53c3c\">ÔâÑ </span>",
      "<span color=\"goldenrod\">ÔâÉ </span>",
      "<span color=\"#ffff00\">ÔâÇ </span>",
      "<span color=\"#9acd32\">ÔâÅ </span>",
      "<span color=\"#2ecc71\">ÔâÄ </span>"
    ]
  },
  "power-profiles-daemon": {
    "format": "{icon}",
    "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
    "tooltip": true,
    "format-icons": {
      "default": "ÔÉß",
      "performance": "ÔÉß",
      "balanced": "Ôâé",
      "power-saver": "ÔÅ¨"
    }
  },
  "network": {
    // "interface": "wlp2*", // (Optional) To force the use of this interface
    // {essid} - wifi name {signalStrength} - % of signal strenght
    // {ifname} - {gwaddr} - old hint(tooltip)
    "format-wifi": "Óì™",
    "format-ethernet": "{ipaddr}/{cidr} Ôûñ",
    "tooltip-format": "{essid} ({signalStrength})%",
    "format-linked": "{ifname} (No IP) Ôûñ",
    "format-disconnected": "‚ö†",
    // "format-alt": "{ifname}: {ipaddr}/{cidr}"
    "on-click": "iwgtk"
  },
  "pulseaudio": {
    // "scroll-step": 1, // %, can be a float
    "format": "<span color=\"#ff4d00\">{icon} </span>{volume}%",
    "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
    "format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source}",
    "format-muted": "Ôö© {format_source}",
    "format-source": "{volume}% ÔÑ∞ ",
    "format-source-muted": "ÔÑ± ",
    "format-icons": {
      "headphone": "ÔÄ•",
      "hands-free": "Ôñê ",
      "headset": "Ôñê ",
      "phone": "ÔÇï ",
      "portable": "ÔÇï ",
      "car": "ÔÜπ ",

      "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
    },
    "on-click": "pavucontrol"
  },
  "custom/media": {
    "format": "{icon} {}",
    "return-type": "json",
    "max-length": 40,
    "format-icons": {
      "spotify": "ÔÜº ",
      "default": "üéú"
    },
    "escape": true,
    "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
    // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
  }
}
